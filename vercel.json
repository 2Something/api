{
    "build": {
      "api/*": {
        "runtime": "nodejs18.x",
        "includeFiles": [
          "node_modules/ffmpeg-static/**/*",
          "node_modules/ffprobe-static/**/*"
        ]
      },
      "env": {
        "FFMPEG_PATH": "/node_modules/ffmpeg-static/",
        "FFPROBE_PATH": "/node_modules/ffprobe-static/bin/win32/x64/"
      }
    }
  }
  